{
  "name": "teamplate-node-express-mongodb",
  "version": "1.0.0",
  "description": "template de projet node express mongodb",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "build-ts": "tsc",
    "build-sass": "node-sass src/front/css/main.scss dist/front/css/main.css",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/back/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/back/server.js",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-sass": "node-sass -w src/front/css/main.scss dist/front/css/main.css",
    "clean": "rimraf dist"
  },
  "author": "T.BERST",
  "license": "ISC",
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.29",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/express-flash": "0.0.1",
    "@types/express-handlebars": "^3.1.0",
    "@types/jquery": "^3.3.31",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.5.41",
    "@types/node": "^13.1.8",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "concurrently": "^5.0.2",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "shelljs": "^0.8.3",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/errorhandler": "0.0.32",
    "@types/shelljs": "^0.8.6",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.1",
    "jquery": "^3.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.8.9",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ts-node": "^8.6.2",
    "winston": "^3.2.1"
  }
}
